{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {    "name": "myData"},
  "name": "Istogramma in pila con barre divise in base al quartile",
  "id": "5",
  "title":{
    "text":"Istogramma con barre in pila colorate in base al quartile",
    "anchor": "middle",
    "orient": "top",
    "offset": 15,
    "fontSize": 20,
    "fontWeight": "normal",
    "color": "#013378"

  },
  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "num_articoli"
        }
      ],
      "groupby": [
        "anno",
        "quartile"
      ]
    }
  ],

  "hconcat": [
    {
      "width": 600,
      "height": 400,

  "mark": "bar",
  "encoding": {
    "x": {
      "field": "anno",
      "type": "ordinal",
      "axis": {
        "title": "Anno",
        "labels": true,
        "labelAngle": 0,
        "minExtent": 20
      }
    },
    "y": {
      "field": "num_articoli",
      "type": "quantitative",

      "axis": {
        "title": "Numero di articoli",
        "tickMinStep": 1
      }
    },
    "color": {
      "field": "quartile",
      "type": "nominal",
      "scale": {"range": ["#A4CF63", "#E8D559", "#FBA353", "#DD5A4E"]},
      "legend": null
    },
    "tooltip": [
      {
        "field": "num_articoli",
        "type": "quantitative",
        "title": "Quantita' di articoli"
      },
      {
        "field": "quartile",
        "type": "nominal",
        "title": "Quartile"
      }
    ]
  },
      "transform": [{"filter": {"selection": "legend"}}]
},
    {
      "width": 40,
      "height": 100,
      "mark": {"type": "circle",
        "size": 85},
      "encoding": {
        "tooltip": null,
        "color": {

          "condition": {
            "type": "nominal",
            "field": "quartile",
            "legend": null,
            "selection": "legend"
          },
          "value": "lightgray"
        },
        "y": {
          "type": "nominal",
          "field": "quartile",
          "title": null,
          "axis": {
            "orient": "right",
            "minExtent": 100,
            "labels": true
          }
        }
      },
      "selection": {
        "legend": {
          "type": "multi",
          "encodings": [
            "color"
          ],
          "on": "click",
          "toggle": "true",
          "resolve": "global",
          "empty": "all"
        }
      }
    }
    ]}
