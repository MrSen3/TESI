{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "articoliInRivista1.json"
  },
  "title": "Istogramma con barre in pila colorate in base al quartile",


  "transform": [
    {
      "aggregate": [
        {
          "op": "count",
          "as": "num_articoli"
        }
      ],
      "groupby": [
        "anno",
        "quartile"
      ]
    }
  ],

  "hconcat": [
    {
      "width": 600,
      "height": 500,

  "mark": "bar",
  "encoding": {
    "x": {
      "field": "anno",
      "type": "ordinal",
      "axis": {
        "title": "Anno"
      }
    },
    "y": {
      "field": "num_articoli",
      "type": "quantitative",

      "axis": {
        "title": "Numero di articoli",
        "bin": {"maxbins": 1}
      }
    },
    "color": {
      "field": "quartile",
      "type": "nominal",
      "scale": {"range": ["#A4CF63", "#E8D559", "#FBA353", "#DD5A4E"]},
      "legend": null
    },
    "tooltip": [
      {
        "field": "num_articoli",
        "type": "quantitative",
        "title": "Quantita' di articoli"
      },
      {
        "field": "quartile",
        "type": "nominal",
        "title": "Quartile"
      }
    ]
  },
      "transform": [{"filter": {"selection": "legend"}}]
},
    {
      "width": 40,
      "height": 100,
      "mark": "circle",
      "encoding": {
        "tooltip": null,
        "color": {

          "condition": {
            "type": "nominal",
            "field": "quartile",
            "legend": null,
            "selection": "legend"
          },
          "value": "lightgray"
        },
        "y": {
          "type": "nominal",
          "field": "quartile",
          "title": null
        }
      },
      "selection": {
        "legend": {
          "type": "multi",
          "encodings": [
            "color"
          ],
          "on": "click",
          "toggle": "true",
          "resolve": "global",
          "empty": "all"
        }
      }
    }
    ]}
