{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"name": "myData"},
  "name": "Bubble plot dei coautori",
  "id": "4",
  "width": 650,
  "height": 700,
  "title":{
    "text":"Bubble plot coautori",
    "offset": 15,
    "anchor": "middle",
    "orient": "top",
    "fontSize": 20,
    "fontWeight": "normal",
    "color": "#013378"
  },

  "mark": {
    "type": "circle",
    "opacity": 0.8,
    "stroke": "black",
    "strokeWidth": 1,
    "fill": "#4682b4"
  },
  "encoding": {
    "x": {"field": "year", "type": "ordinal", "axis":{"title":"Anno", "grid": true, "labels": true,
      "labelAngle": 0, "minExtent": 20}},
    "y": {"field": "cognome", "type": "nominal", "sort":null, "axis":{"title":"Coautori", "minExtent":150, "grid":true}},
    "size": {
      "field": "contributi",
      "type": "quantitative",
      "legend": {"title": "Quantita' di pubblicazioni", "clipHeight": 50},
      "scale": {"range": [0, 2000]}
    },

    "tooltip": [
      {"field": "contributi",
        "type": "quantitative",
        "title": "Collaborazioni"
      },
      {"field": "cognome",
        "type": "nominal",
        "title": "Cognome"
      },
      {"field": "nome",
        "type": "nominal",
        "title": "Nome"
      },
      {"field": "year",
        "type": "nominal",
        "title": "Anno"
      }
    ]
  }
}