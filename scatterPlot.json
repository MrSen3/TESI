{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "pubblicazioni1.json"},
  "width": 400,
  "heigth": 700,
  "transform": [
    {
      "aggregate": [{"op": "count", "as": "num_pubblicazioni"}],
      "groupby": ["year"]
    }
  ],
  "layer": [{
    "selection": {
      "brush": {
        "type": "interval",
        "encodings": ["x"]
      }
    },
    "mark": {
      "type": "line",
      "point": true,
      "opacity": 0.8,
      "stroke": "black",
      "strokeWidth": 0.5
    },
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "axis": {
          "title": "Anno"
        }
      },
      "y": {
        "field": "num_pubblicazioni",
        "type": "quantitative",
        "axis": {
          "title": "Numero di pubblicazioni"
        }
      },
      "opacity": {
        "condition": {
          "selection": "brush", "value": 1
        },
        "value": 0.7
      },
      "tooltip": [
        {
          "field": "num_pubblicazioni",
          "type": "quantitative"
        },
        {
          "field": "year",
          "type": "nominal"
        }
      ]
    }
  },
    {
      "transform": [{
        "filter": {"selection": "brush"}
      }],

      "mark": "rule",
      "encoding": {
        "y": {
          "aggregate": "mean",
          "field": "num_pubblicazioni",
          "type": "quantitative"
        },
        "color": {
          "value": "firebrick"
        },
        "size": {
          "value": 3
        }
      }
    }
  ]
}