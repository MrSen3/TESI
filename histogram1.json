{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"name": "myData"},
  "name": "Istogramma in pila con barre divise per tipologia",
  "id": "3",

  "title":{
    "text":"Istogramma con barre in pila in base al tipo",
    "offset": 15,
    "anchor": "middle",
    "orient": "top",
    "fontSize": 20,
    "fontWeight": "normal",
    "color": "#013378"
  },

  "transform": [
    {
      "aggregate": [{"op": "count", "as": "num_pubblicazioni"}],
      "groupby": ["year","description"]
    }
  ],

  "hconcat": [
    {
      "width": 550,
      "height": 425,

      "mark": "bar",
      "encoding": {
        "x": {"field": "year", "type": "ordinal",  "axis":{"title":"Anno", "labels": true,
          "labelAngle": 0, "minExtent": 20}},
        "y": {"field": "num_pubblicazioni", "type": "quantitative","axis":{"title":"Numero di pubblicazioni"}},
        "color":{"field": "description", "type": "nominal", "legend":null},
        "tooltip": [
          {
            "field": "num_pubblicazioni",
            "type": "quantitative",
            "title": "Quantita'"
          },
          {
            "field": "description",
            "type": "nominal",
            "title": "Tipologia"
          },
          {
            "field": "year",
            "type": "ordinal",
            "title": "Anno"
          }
        ]
      },
      "transform": [{"filter": {"selection": "legend"}}]
    },
    {

      "width": 50,
      "height": 130,

      "mark": {"type": "circle",
        "size": 85},
      "encoding": {
        "tooltip": null,
        "color": {
          "condition": {
            "type": "nominal",
            "field": "description",
            "legend": null,
            "selection": "legend"
          },
          "value": "lightgray"
        },
        "y": {
          "type": "nominal",
          "field": "description",
          "title": null,
          "axis": {
            "orient": "right",
           "minExtent": 170,
            "labels": true
          }
        }
      },
      "selection": {
        "legend": {
          "type": "multi",
          "encodings": [
            "color"
          ],
          "on": "click",
          "toggle": "true",
          "resolve": "global",
          "empty": "all"
        }
      }
    }
  ]}