{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "pubblicazioni1.json"},
  "title": "Istogramma con barre sezionate in base alla tipologia",
  "width":600,
  "heigth": 1000,
  "transform": [
    {
      "aggregate": [{"op": "count", "as": "num_pubblicazioni"}],
      "groupby": ["year","description"]
    }
  ],

  "mark": "bar",
  "encoding": {
    "x": {"field": "year", "type": "ordinal", "axis":{"title":"Anno"}},
    "y": {"field": "num_pubblicazioni", "type": "quantitative", "axis":{"title":"Numero di pubblicazioni"}},
    "color":{"field": "description", "type": "nominal", "legend":{"title":"Tipologia"}},
    "tooltip": [
      {"field": "num_pubblicazioni", "type": "quantitative"},
      {"field":  "description", "type": "nominal"}
    ]
  }
}